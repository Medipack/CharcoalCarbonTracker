<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sfu.cmpt276.carbontracker.ui.SelectTransportationActivity">

    <Button
        android:background="@mipmap/bike"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:id="@+id/walkMode" />

    <Button
        android:background="@mipmap/bus"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/walkMode"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:id="@+id/busMode" />

    <Button
        android:background="@mipmap/skytrain1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/walkMode"
        android:layout_marginBottom="60dp"
        android:id="@+id/skytrainMode" />

    <Button
        android:background="@mipmap/car5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/skytrainMode"
        android:layout_alignEnd="@+id/busMode"
        android:id="@+id/carMode" />

    <TextView
        android:text="@string/select_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#de5816"
        android:id="@+id/select"
        android:textSize="50sp"
        android:textStyle="normal|bold"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>
