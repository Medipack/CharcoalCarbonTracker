<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@mipmap/back"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sfu.cmpt276.carbontracker.MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/car2"
        android:id="@+id/carTwo"
        android:layout_alignTop="@+id/carOne"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/car1"
        android:id="@+id/carOne"
        android:layout_marginTop="400dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/carTwo"
        android:layout_toEndOf="@+id/carTwo" />

    <TextView
        android:text="Carbon Tracker"
        android:textColor="#9c9292"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/NameTitle"
        android:textStyle="normal|bold|italic"
        android:textSize="36sp" />

    <TextView
        android:text="Jarinya Hochstrasser"
        android:textColor="#e78e4f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NameTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/name1"
        android:textSize="18sp"
        android:textStyle="normal|italic" />

    <TextView
        android:text="Calvin Chou"
        android:textColor="#a5ce13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/name2"
        android:textSize="18sp"
        android:textStyle="normal|italic" />

    <TextView
        android:text="Tim Robertson"
        android:textColor="#14de79"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/name3"
        android:textSize="18sp"
        android:textStyle="normal|italic" />

    <TextView
        android:text="Xiangyi Li"
        android:textColor="#20d5f1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/name4"
        android:textSize="18sp"
        android:textStyle="normal|italic" />
</RelativeLayout>
