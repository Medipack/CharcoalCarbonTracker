<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_emission"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sfu.cmpt276.carbontracker.EmissionActivity">

    <TextView
        android:text="Car Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:id="@+id/carName"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:text="car1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carName"
        android:layout_alignStart="@+id/carName"
        android:layout_marginTop="13dp"
        android:id="@+id/showCarName"
        android:textSize="14sp" />

    <TextView
        android:text="Route Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showCarName"
        android:layout_alignStart="@+id/showCarName"
        android:layout_marginTop="23dp"
        android:id="@+id/routeName"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:text="route1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/routeName"
        android:layout_alignStart="@+id/routeName"
        android:layout_marginTop="15dp"
        android:id="@+id/showRouteName"
        android:textSize="14sp" />

    <TextView
        android:text="City Emission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showRouteName"
        android:layout_alignStart="@+id/showRouteName"
        android:layout_marginTop="20dp"
        android:id="@+id/cityEmission"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:text="city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityEmission"
        android:layout_alignEnd="@+id/showCarName"
        android:layout_marginTop="12dp"
        android:id="@+id/showCityDistance"
        android:textSize="14sp"
        android:layout_alignStart="@+id/cityEmission" />

    <TextView
        android:text="Highway Emission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showCityDistance"
        android:layout_alignStart="@+id/showCityDistance"
        android:layout_marginTop="19dp"
        android:id="@+id/highwayEmission"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:text="highway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/highwayEmission"
        android:layout_alignStart="@+id/highwayEmission"
        android:layout_marginTop="17dp"
        android:id="@+id/showHighwayDistance"
        android:textSize="14sp" />

    <TextView
        android:text="Total Emission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showHighwayDistance"
        android:layout_alignStart="@+id/showHighwayDistance"
        android:layout_marginTop="24dp"
        android:id="@+id/totalEmission"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:text="total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalEmission"
        android:layout_alignStart="@+id/totalEmission"
        android:layout_marginTop="15dp"
        android:id="@+id/showTotalEmission"
        android:textSize="14sp" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showTotalEmission"
        android:layout_alignStart="@+id/showTotalEmission"
        android:layout_marginTop="41dp"
        android:id="@+id/backEmission"
        android:textSize="18sp" />
</RelativeLayout>
