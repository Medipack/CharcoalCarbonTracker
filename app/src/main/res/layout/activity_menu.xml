<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <Button
        android:background="@mipmap/j5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="60dp"
        android:id="@+id/createJourneyBtn" />

    <Button
        android:background="@mipmap/graphbtn2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="170dp"
        android:id="@+id/showGraphBtn" />
    <Button
        android:background="@mipmap/co"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/createJourneyBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:id="@+id/viewCarbonTotalsBtn" />
    <TextView
        android:text="@string/main_menu"
        android:textColor="#231919"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/createJourneyBtn"
        android:layout_marginTop="20dp"
        android:id="@+id/carbon"
        android:textSize="30sp" />
    <Button
        android:background="@mipmap/gas1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:id="@+id/createUtilityBtn" />

</RelativeLayout>