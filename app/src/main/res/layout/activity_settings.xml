<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sfu.cmpt276.carbontracker.ui.SettingsActivity">

    <TextView
        android:id="@+id/settings_titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/settings_unitsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/settings_unitsToggle"
        android:layout_alignBottom="@+id/settings_unitsToggle"
        android:layout_alignParentStart="true"
        android:text="@string/units"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="111dp" />

    <Spinner
        android:id="@+id/settings_unitsToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_titleTxt"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="41dp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/settings_titleTxt" />

    <TextView
        android:id="@+id/settings_languageTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/language"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="213dp"
        android:layout_below="@+id/settings_unitsToggle"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/settings_languageSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/settings_languageTxt"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/settings_unitsToggle" />

    <Button
        android:id="@+id/settings_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="15dp"
        android:text="@string/apply" />

</RelativeLayout>
