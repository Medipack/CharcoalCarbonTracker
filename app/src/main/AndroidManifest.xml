<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sfu.cmpt276.carbontracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity"
            android:theme="@style/back">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MenuActivity"
            android:theme="@style/backk7"/>
        <activity
            android:name=".ui.TransportationModeActivity"
            android:exported="true"
            android:label="@string/select_a_vehicle"
            android:theme="@style/backk6"/>
        <activity android:name=".ui.JourneyEmissionActivity"
            android:theme="@style/backk9"/>
        <activity
            android:name=".ui.RouteActivity"
            android:label="@string/select_a_route"
            android:theme="@style/backk6"/>
        <activity android:name=".ui.JourneyActivity"
            android:theme="@style/backk6"/>
        <activity android:name=".ui.PieGraphActivity" />
        <activity android:name=".ui.GraphActivity" />
        <activity android:name=".ui.SingleDayActivity" />
        <activity android:name=".ui.MultiDayGraphs" />
        <activity android:name=".ui.SelectTransportationActivity"
            android:theme="@style/backk1"/>
        <activity
            android:name=".ui.EditJourneyActivity"
            android:theme="@style/backk6" />
        <activity android:name=".ui.BillActivity" />
        <activity android:name=".ui.UtilityActivity" />
        <activity android:name=".ui.PickDateActivity" />
    </application>

</manifest>